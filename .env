# ChatNegocios — configuração local unificada (backend + frontend)

# Backend Express
PORT=3001
# Permite CORS de todas as origens em ambiente local
CORS_ALLOW_ALL=true
# Opcional: liste origens específicas se preferir restringir
# CORS_ORIGINS=http://localhost:5173,http://localhost:5175,http://localhost:4173,http://localhost:4176,http://127.0.0.1:5173,http://127.0.0.1:5175,http://127.0.0.1:4173,http://127.0.0.1:4176
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/chatnegocios

# Frontend (Vite)
VITE_BACKEND_URL=http://localhost:3001

# Evolution API (provedor)
VITE_EVOLUTION_API_URL=http://localhost:8080
VITE_EVOLUTION_API_KEY=change-me
VITE_EVOLUTION_QR_ENDPOINT_TEMPLATE=/instance/qrCode/{instanceName}
VITE_EVOLUTION_WEBHOOK_URL=

# UI de atualização (admin)
ENABLE_UI_UPDATE=false
GITHUB_REPO=
GITHUB_BRANCH=main
AUTO_RESTART_ON_UPDATE=false
