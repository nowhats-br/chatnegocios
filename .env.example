# ChatNegocios — exemplo de configuração

# Backend Express (para Webhook)
PORT=3001
# Permite CORS de todas as origens em ambiente local
CORS_ALLOW_ALL=true
# Opcional: liste origens específicas se preferir restringir
# CORS_ORIGINS=http://localhost:5173,https://app.seudominio.com

# Supabase (Frontend e Backend)
# Chaves públicas para o frontend
VITE_SUPABASE_URL="YOUR_SUPABASE_URL"
VITE_SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_KEY"
# Chaves para o backend (webhook)
SUPABASE_URL="YOUR_SUPABASE_URL"
SUPABASE_SERVICE_ROLE_KEY="YOUR_SUPABASE_SERVICE_KEY"

# Frontend (Vite)
VITE_BACKEND_URL=http://localhost:3001

# Evolution API (provedor)
VITE_EVOLUTION_API_URL=https://api.seuprovedor.com
VITE_EVOLUTION_API_KEY=sua-chave-aqui
# Opcional: template para URL de QR Code, se o provedor usar um formato diferente
VITE_EVOLUTION_QR_ENDPOINT_TEMPLATE=/instance/qrCode/{instanceName}
# Webhook público para receber eventos (em produção, ex: https://api.seudominio.com/api/whatsapp/webhook)
VITE_EVOLUTION_WEBHOOK_URL=

# Atualização via UI (admin)
ENABLE_UI_UPDATE=false
GITHUB_REPO=
GITHUB_BRANCH=main
AUTO_RESTART_ON_UPDATE=false
